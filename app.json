{
  "expo": {
    "name": "See Colors",
    "slug": "see-colors",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.melvindinh.seecolors",
      "ascAppId": "6747242092",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSPhotoLibraryUsageDescription": "This app needs photos permission to select images for colorblind optimization.",
        "NSCameraUsageDescription": "This app needs camera permission to capture images for colorblind optimization.",
        "NSPhotoLibraryAddUsageDescription": "This app needs save photos permission to save modified images to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "blockedPermissions": [
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.RECORD_AUDIO",
        "android.permission.VIBRATE"
      ],
      "package": "com.melvindinh.seecolors"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "0450ab61-1aef-415c-ad29-f61acd773545"
      }
    },
    "assetBundlePatterns": [
      "assets/*"
    ]
  }
}
